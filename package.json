{
  "name": "hono-openid-connect",
  "version": "2.0.1",
  "description": "OpenID Connect middleware for Hono",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "npm run build",
    "example:basic": "tsx watch --env-file=examples/.env examples/basic/index.ts",
    "example:auth-required": "tsx watch --env-file=examples/.env examples/auth-required/index.tsx",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "hono",
    "openid-connect",
    "auth",
    "oidc",
    "oauth2"
  ],
  "author": {
    "name": "JosÃ© F. Romaniello",
    "url": "https://x.com/jfroma"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.24.0",
    "@hono/node-server": "^1.14.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.11.26",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "hono": "^4.7.6",
    "prettier": "3.5.3",
    "react": "^19.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@jfromaniello/hono-sessions": "^1.3.0",
    "jose": "^6.0.11",
    "oauth4webapi": "^3.5.0",
    "openid-client": "^6",
    "quick-lru": "^7.0.1",
    "zod": "^3.24.4"
  },
  "peerDependencies": {
    "hono": ">=3.0.0"
  }
}
